<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coolcr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    coolcr:cardBackgroundColor="@color/white"
    coolcr:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/on_sell_cover_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/on_sell_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="艾叶生姜红花老姜草本泡脚中药包男女足浴粉包祛濕去濕..艾叶生姜红花老姜草本泡脚中药包男女足浴粉包祛濕去濕.."
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/on_sell_origin_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="￥58.9"
                android:textColor="@color/colorOnSellPrice"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/on_sell_off_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券后价：28.8"
                android:textColor="@color/colorOnSellPrice"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>